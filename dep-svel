apiVersion: apps/v1
kind: Deployment
metadata:
  name: dep-svel
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-type: "nlb"

spec:
  replicas: 1
  selector:
    matchLabels:
      app: svel
  template:
    metadata:
      labels:
        app: svel
    spec:
      containers:
      - name: con-svel
        image: 879405774439.dkr.ecr.ap-northeast-2.amazonaws.com/svel:1
---
apiVersion: v1
kind: Service
metadata:
  name: svel
spec:
  selector:
    app: svel
  ports:
  - port: 80
    targetPort: 80
  type: LoadBalancer
